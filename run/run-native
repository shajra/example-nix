#! /usr/bin/env nix-shell
#! nix-shell -I nixpkgs=https://github.com/NixOS/nixpkgs-channels/archive/9a3e34ae60130c63b93809eecf555b0d796f001c.tar.gz
#! nix-shell -i bash -p gnused
set -eu


. "$(dirname "$0")/common.sh"


nix_run()
(
    project="$1"
    attr="example-$project-app"
    cmd="example-$project"
    build_expr="$(project_root "$project")/build.nix"
    do_with_header nix run --show-trace -f "$build_expr" "$attr" -c "$cmd"
)


run nix_run "${1:-}"
